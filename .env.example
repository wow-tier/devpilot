# OpenAI API Key (required for AI agent functionality)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database URL (required)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:password@localhost:5432/ai_code_agent
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/ai_code_agent?schema=public"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Optional: GitHub token for pushing to remote repositories
# Create one at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Optional: Node environment
NODE_ENV=development

# Optional: Custom port (default: 3000)
# PORT=3001

# Optional: Redis for session storage (if using Redis instead of DB)
# REDIS_URL=redis://localhost:6379
